<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivLibroImagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/libro_imagen" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tvLibroNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnEditarLibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_libro" />

        <Button
            android:id="@+id/btnDeleteLibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_libro" />

    </LinearLayout>

</LinearLayout>
